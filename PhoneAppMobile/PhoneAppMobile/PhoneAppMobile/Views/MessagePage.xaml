<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneAppMobile.Views.MessagePage"
             Title="Messaging">
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="To" FontSize="Medium" />
            <Entry Text="{Binding To, Mode=TwoWay}" FontSize="Medium" />
            <Label Text="Message" FontSize="Medium" />
            <Editor Text="{Binding Message, Mode=TwoWay}" VerticalOptions="FillAndExpand" FontSize="Medium" Margin="0" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Send" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>